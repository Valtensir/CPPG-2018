<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <% include ../partials/head %>
    </head>
      <body>
    
        <header>
			<% include ../partials/navbar %>
			
			<!-- Latest compiled and minified CSS -->
			<link rel="stylesheet" href="/CPPG/assets/gallery/css/blueimp-gallery.min.css">
        </header>
    
        <main role="main" class="mt-5">
    
			<div class="row">
				<section class="content mx-auto my-5 text-center">
					<br>
					<div>
							<div class="card">
									<div class="card-header">
											<h5 class="card-title">Galeria de fotos e vídeos</h5>
									</div>
									<div class="card-body">
												  
										<!-- The Gallery as lightbox dialog, should be a child element of the document body -->
										<div id="blueimp-gallery" class="blueimp-gallery">
											<div class="slides"></div>
											<h3 class="title"></h3>
											<a class="prev">‹</a>
											<a class="next">›</a>
											<a class="close">×</a>
											<a class="play-pause"></a>
											<ol class="indicator"></ol>
										</div>

										<div id="links">
											<% for (image of images){ %>
												<a href="assets/gallery/album/<%= image %>">
													<img src="assets/gallery/album/<%= image %>">
												</a>
											<% } %>
										</div>
									</div>
								  </div>
						</div>
					</div>
				</section>
			</div>    
    
			<!-- FOOTER -->
			<footer class="container">
			<p class="float-right"><a href="#">Voltar ao topo</a></p>
			<p>© 2018 IFMG Campus Sabará</p>
			</footer>
        </main>
	
		<!-- Bootstrap core JavaScript -->
		<% include ../partials/footer %>
		<script src="assets/gallery/js/blueimp-gallery.min.js"></script>
		<script src="assets/gallery/js/display-thumbs.js"></script>