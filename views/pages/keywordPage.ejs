<!DOCTYPE <!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<% include ../partials/head %>
		<link rel="stylesheet" type="text/css" href="/CPPG/assets/css/searchProceedings.css">
		<link rel="stylesheet" type="text/css" href="/CPPG/assets/css/cloud.css">
		<!------ Include the above in your HEAD tag ---------->
</head>

<body class="pt-5">
	<header class="mb-5">
		<% include ../partials/navbar %>
	</header>
	<main role="main" class="container" id="main">
		<div class="container">
			<div class="row">
				<section class="content">
					<br>
					<div class="card text-center">
						<div class="card-header">
							<h1>Trabalhos Relacionados à área de:</h1>
							<div class="cloud">
								<h1 class="tag">
									<%= word %>
								</h1>
							</div>
						</div>
						<% for (proceeding of proceedingsByKeyword){%>
							<table class="table table-filter">
								<tbody>
									<tr>
										<td>
											<div class="ckbox">
												<input type="checkbox" id="checkbox1">
												<label for="checkbox1"></label>
											</div>
										</td>
										<td>
											<a href="javascript:;" class="star">
												<i class="glyphicon glyphicon-star"></i>
											</a>
										</td>
										<td>
											<div class="col-sm-4">
											</div>

											<div class="media d-block">
												<a href="#" class="float-left pr-3 pr-md-0 mr-md-5">
													<img src="https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg" class="media-photo">
												</a>
												<div class="media-body">
													<span class="media-meta pull-right">
															<%=proceeding[4];%>
													</span>
													<h4 class="title">
														<% if (proceeding[1] != [] && proceeding[1] != undefined) { %>
															<%if (proceeding[3] == 'null') {%>
																<%= proceeding[1] %>
																	<%} else {%>
																		<a href="<%= proceeding[3] %>" target="blank">
																			<%= proceeding[1] %>
																		</a>
																		<%}%>
																			<%}%>

																				<span class="pull-right Tìtulo">(Título)</span>
													</h4>
													<p class="summary">Autores:
														<% if (proceeding[2] != [] && proceeding[2] != undefined) { %>
															<% for (author of proceeding[2]){%>
																<span>
																	<%= author %>;</span>
																<%}%>
																	<%}%>
													</p>
													<p class="summary">Alunos Envolvidos:
														<% if (proceeding[7] != [] && proceeding[7] != undefined) { %>
															<% for (student of proceeding[7]){%>
																<span>
																	<%= student %>;</span>
																<%}%>
																	<%}%>
													</p>
												</div>
											</div>
										</td>
									</tr>
									<% } %>
								</tbody>
							</table>
					</div>
			</div>
			</section>

		</div>
		</div>
	</main>

	<!-- Bootstrap core JavaScript -->
	<% include ../partials/footer %>
	<script type="text/javascript">
		document.title =  '<%=word%> - ' + document.title;
	</script>

</body>

</html>