            </div><!-- /.container -->
    
    
          <!-- FOOTER -->
          <footer class="container">
            <p class="float-right"><a href="#">Voltar ao topo</a></p>
            <p>© 2018 IFMG Campus Sabará</p>
          </footer>
        </main>
    
        <!-- Bootstrap core JavaScript -->
        <% include ../partials/footer %>
